@inherits LayoutComponentBase
@inject GoogleDriveService GoogleDriveService
@inject IDialogService DialogService

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-3">Ã‡arÅŸÄ± Kuyumculuk</MudText>
        <MudSpacer />
        @if (DeviceInfo.Platform != DevicePlatform.Android)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" />
            <MudIconButton Icon="@Icons.Material.Filled.People" Color="Color.Inherit" Href="/customers" />
            <MudIconButton Icon="@Icons.Material.Filled.Receipt" Color="Color.Inherit" Href="/transactions" />
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Backup"
            OnClick="@(() => BackupToGoogleDrive())" Disabled="@isBackupInProgress">
                @(isBackupInProgress ? "Yedekleniyor..." : "Yedek Al")
            </MudButton>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.DataObject" Color="Color.Inherit" Href="/import-data" />
        }

    </MudAppBar>

    <MudMainContent Class="pt-16 px-4">
        @Body
    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="myCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />
<MudScrollToTop>
    <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.ArrowCircleUp" />
</MudScrollToTop>

@code {
    private bool isBackupInProgress = false;
    private string backupResult = string.Empty;
    private MudTheme myCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#5851db",
            Secondary = "#833ab4",
            AppbarBackground = "#5851db",
            Background = "#f8f9fa",
            DrawerBackground = "#FFF",
            DrawerText = "rgba(0,0,0, 0.7)",
            Success = "#06d79c"
        },
        Typography = new Typography()
        {
                Default = new DefaultTypography()
                {
                FontFamily = new[] { "Roboto", "Helvetica", "Arial", "sans-serif" },
                FontSize = "0.875rem",
                FontWeight = "400",
                LineHeight = "1.43",
                LetterSpacing = ".01071em"
            }
        }
    };

    private async Task BackupToGoogleDrive()
    {
        var confirmResult = await DialogService.ShowMessageBox(
          "Emin misiniz?",
          $"Yedekleme Alýnacak",
          yesText: "Evet",
          noText: "Hayýr");

        if (confirmResult == false) return;
        try
        {
            isBackupInProgress = true;
            StateHasChanged();

            backupResult = await GoogleDriveService.BackupDatabaseAsync();

            await DialogService.ShowMessageBox(
                "Yedekleme",
                backupResult,
                yesText: "Tamam");
        }
        catch (Exception ex)
        {
            await DialogService.ShowMessageBox(
                "Hata",
                $"Yedekleme sýrasýnda bir hata oluþtu: {ex.Message}",
                yesText: "Tamam");
        }
        finally
        {
            isBackupInProgress = false;
            StateHasChanged();
        }
    }
}
