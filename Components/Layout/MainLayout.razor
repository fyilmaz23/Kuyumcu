@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudText Typo="Typo.h6" Class="ml-3">Kuyumcu Mehmet</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" />
        <MudIconButton Icon="@Icons.Material.Filled.People" Color="Color.Inherit" Href="/customers" />
        <MudIconButton Icon="@Icons.Material.Filled.Receipt" Color="Color.Inherit" Href="/transactions" />
    </MudAppBar>
    
    <MudMainContent Class="pt-16 px-4">
        @Body
    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="myCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

@code {
    private MudTheme myCustomTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#5851db",
            Secondary = "#833ab4",
            AppbarBackground = "#5851db",
            Background = "#f8f9fa",
            DrawerBackground = "#FFF",
            DrawerText = "rgba(0,0,0, 0.7)",
            Success = "#06d79c"
        },
        Typography = new Typography()
        {
                Default = new DefaultTypography()
                {
                FontFamily = new[] { "Roboto", "Helvetica", "Arial", "sans-serif" },
                FontSize = "0.875rem",
                FontWeight = "400",
                LineHeight = "1.43",
                LetterSpacing = ".01071em"
            }
        }
    };
}
